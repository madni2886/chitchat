<%= form_for [current_user, @group] do | f | %>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="mb-3 row">
      <div class='control-label col-sm-2'>

        <%= f.radio_button :group_type, 'Public' %> Public
        <%= f.radio_button :group_type, 'Private' %> Private
      </div>
    </div>
  </div>
  </div>
  <div class="mb-3 row">
    <div class="col-sm-2">
      <%= f.label :image %>
    </div>
    <div class="col-sm-8">
      <%= f.file_field :image, class: "form-control", placeholder: "Title of article", autofocus: true %>
    </div>
  </div>
  </div>
  <div class="center">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
