<%= form_for @user do | f | %>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.label :username %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="mb-3 row">
      <div class="col-sm-2">
        <%= f.radio_button :plan, 'Premium' %> Premium
        <%= f.radio_button :plan, 'basic' %> basic


      </div>
    </div>
  </div>

  <div class="center">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
